<div class="container">
	<div class="feedback-error">There was a problem with your request.</div>
	<h2>Give us Feedback</h2>
	<form id="feedback-form">
		<div class="control-group">
			<label for="from_name">Your Name:</label>
			<input type="text" name="from_name" title="Provide your name"/>
		</div>
		<div class="control-group">
			<label for="from_email">Your Email:</label>
			<input type="text" name="from_email" title="Provide your email"/>
		</div>
		<div class="control-group">
			<label for="subject">Subject:</label>
			<input type="text" name="subject" title="Provide the subject"/>
		</div>
		<div class="control">
			<label for="feedback-body">Message:</label>
			<textarea type="text" name="body" title="Write your message here"/>
		</div>
		<input type="hidden" name="user_agent"/>
		<button type="submit" value="Submit">Send Feedback</button>
	</form>
</div>