<div class="query-representation">
  <div class="query-representation-content">
    <table>
      <tr>
        <td>Sort</td>
        <td>Open now</td>
        <td rowspan=2 style="width:25p%">
         <div class="more-options">More <i class="icon-right-open-2"></i></div>
        </td>
      </tr>
      <tr>
        <td style="width:40%">
          <div class="btn-group" data-toggle='buttons-radio'>
            <select id="sort-toggle">
              <option value="Near">Near</option>
              <option value="Name">Name</option>
            </select>
          </div>
        </td>
        <td style="width:35%">
          <select id="open-toggle">
            <option value="yes">Yes</option>
            <option value="no">No</option>
          </select>
        </td>
      </tr>
    </table>
  </div>
</div>
