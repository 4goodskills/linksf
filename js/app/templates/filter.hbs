{{> nav}}

<div id="filter">
  <h3>Sort by</h3>
  <div class="filter-sort btn-group" data-toggle="buttons-radio">
    <button data-value="name" class="btn active">Name</button>
    <button data-value="near" class="btn">Distance</button>
  </div>

  <h3>Service</h3>
  {{> filterCategories}}

  <h3>Suitable for</h3>
  <div class="filter-demographics btn-group" data-toggle="buttons-checkbox">
    <button data-value="C" class="btn">Children</button>
    <button data-value="Y" class="btn">Teens/Youth</button>
    <button data-value="A" class="btn">Adults</button>
    <button data-value="S" class="btn">Seniors</button>
  </div>

  <h3>Restricted to</h3>
  <div class="filter-gender btn-group" data-toggle="buttons-radio">
    <button data-value="A" class="btn active">All</button>
    <button data-value="M"  class="btn">Men</button>
    <button data-value="F"  class="btn">Women</button>
  </div>

  <div class="search">
    <button class="btn btn-info search-button">Search</button>
  </div>
</div>
