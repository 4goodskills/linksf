<div class="service-edit-row container">
  <input type="hidden" name="services[][id]" value="{{objectId}}">
  <div>
    <label for="services[][name]">Service name</label>
    <input type="text" name="services[][name]" value="{{name}}" class="span2">
  </div>
  <div>
    <label for="services[][category]">Category</label>
    <p>
      {{category}}
      <input type="hidden" name="services[][category]" value="{{category}}">
    </p>
  </div>
  <div>
    <label for="services[][description]">Description</label>
    <input type="text" class="span3" name="services[][description]" value="{{description}}">
  </div>
  <div>
    <label for="services[][notes]">Notes</label>
    <textarea class="span5" rows=4 name="services[][notes]">{{notes}}</textarea>
  </div>
  <div>
    Open Hours
    {{> editServiceHours}}
    <br/>
    <p>
      <a id="remove_category" href="#">Remove service</a>
    </p>
  </div>
</div>
